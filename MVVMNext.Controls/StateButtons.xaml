<Border x:Class="MVVMNext.Controls.StateButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lcl="clr-namespace:MVVMNext.Controls"
             xmlns:svg="clr-namespace:SVGImage.SVG;assembly=DotNetProjects.SVGImage"
             mc:Ignorable="d"  Loaded="UserControl_Loaded"
             d:DesignHeight="50" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <lcl:CommandPanel x:Name="MinimizeButton" MinWidth="32" Background="Transparent">
            <svg:SVGImage Grid.Row="1" Width="24" Height="24" Source="/MVVMNext.Controls;component/svg/move.svg"  OverrideColor="Aqua" OverrideStrokeWidth="2" >

            </svg:SVGImage>
        </lcl:CommandPanel>
        <Button Background="Blue" MinWidth="32" Click="Click_Maximize" />
        <Button Background="Red" MinWidth="32" Click="Click_Close" />
    </StackPanel>
</Border>
